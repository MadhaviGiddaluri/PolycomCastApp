<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.mgiddaluri.casttest.MeetingInfo"
    android:weightSum="1"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/presentuser"
        android:layout_gravity="right"
        android:textSize="25dp"
        android:textColor="#ff248241" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with different account"
        android:id="@+id/newuser"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:textColor="#ff9d8054" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/meetingId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="Meeting Id"
        android:textColor="#ff25880f"
        android:textSize="30dp"
        android:typeface="serif"
        android:visibility="visible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/join"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/joinmeeting"
        android:layout_marginTop="40dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Ensure that Device is Wi-Fi enabled .."
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom|right"
        android:textColor="#ff73a81f"
        android:layout_marginTop="50dp"
        android:layout_marginRight="22dp" />

</LinearLayout>
