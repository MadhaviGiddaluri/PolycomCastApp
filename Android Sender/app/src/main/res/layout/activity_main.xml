<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Polycom Cast App"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:typeface="serif"
        android:textColor="#ffc0ff70"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#ff543d2a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Your Credentials"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ffb7fcff"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:typeface="normal"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uname"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:hint="UserName"
        android:textSize="30dp"
        android:typeface="serif"
        android:visibility="visible"
        android:textColor="#ff7ffffd"
        android:textColorHighlight="#ff8191ff"
        android:shadowColor="#ffedf4ff"
        android:singleLine="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:ems="10"
        android:id="@+id/pswd"
        android:layout_below="@+id/uname"
        android:layout_alignRight="@+id/uname"
        android:layout_alignEnd="@+id/uname"
        android:hint="Password"
        android:typeface="serif"
        android:layout_marginTop="25dp"
        android:textSize="30dp"
        android:textColor="#ff7ffffd"
        android:textColorHighlight="#ff8191ff"
        android:shadowColor="#ffedf4ff"
        android:singleLine="true"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/login"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/login"
        android:layout_weight="0.40"
        android:layout_marginTop="51dp" />

</LinearLayout>
